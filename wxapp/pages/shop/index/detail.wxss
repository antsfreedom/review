/*幻灯片*/
.slide {
    height: 200px;
}
.slide-image {
    width: 100%;
    height: 200px;
}
.tab {
    padding: 16rpx;
}
.tab image {
    max-width: 100%;
}
.info {
    padding:30rpx;
}
.info__item_title {
    display: inline-block;
}
.info__item button {
    vertical-align: middle;
    margin-top: 0!important;
}
.info__item button[type="warn"] {
    margin-right: 10rpx;
}
.info__item > button[type='default']:first-child {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
}
.info__item > button[type='default']:nth-child(2) {
    border-radius: 0;
    border-left: none;
    border-right: none;
}
.info__item > button[type='default']:last-child {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
}
.info__express {
    color: #999;
    font-size: 26rpx;
}
.info > view:not(:first-child) {
    margin-top: 30rpx;
}

.hot-title{
  height:40px;
  line-height: 40px;
  padding-left:5px;
  margin-top:10px;
  background:#fff;
}

.goods-item {
    display: inline-block;
    width: calc(50% - 18rpx);
    overflow: hidden;
    background-color: #fff;
}
.goods-item:nth-child(1),.goods-item:nth-child(2) {
    margin-top: 12rpx;
}
.goods-item:nth-child(even) {
    margin-left: 6rpx;
    margin-right: 12rpx;
}
.goods-item:nth-child(odd) {
    margin-right: 6rpx;
    margin-left:12rpx;
}
.goods-item__cover {
    width: 100%;
    height: 300rpx;
}
.goods-item__info {
    padding: 12rpx;
}
.goods-item__title {
    font-size: 24rpx;
    height: 38px;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #999;
}
/*底部tabbar*/
.toolbar {
    display: flex;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #fff;
    height: 45px;
    font-size: 28rpx;
}
.toolbar-item .fa {
    line-height:  16px;
}
.toolbar-item view {
    line-height: 20px;
}
.toolbar-item:nth-child(1) .fa{
    color: #3399ff;
}
.toolbar-item:nth-child(1),
.toolbar-item:nth-child(2),
.toolbar-item:nth-child(3) {
    flex-grow: 1;
    flex-direction: column;
    align-content:center;
}
.toolbar-item:nth-child(4),
.toolbar-item:nth-child(5) {
    flex-grow: 2;
    color: #fff;
}
.toolbar-item:nth-child(4) {
    background-color: #e64340;
}
.toolbar-item:nth-child(5) {
    background-color:  #f85a61;
}
.toolbar-item .fa-star {
    color: rgba(250,180,90,0.93);
}

