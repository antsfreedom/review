	<view class='page__ft'>
        <view class='toolbar'>
            <navigator url='/pages/im/index/index' class='toolbar-item center'>
                <view class='fa fa-comment'></view>
                <view>客服</view>
            </navigator>
            <view class='toolbar-item center' bindtap='goodsMark'>
                <block wx:if='{{info.mark_status}}'>
                    <view class='fa fa-star'></view>
                    <view>已收藏</view>
                </block>
                <block wx:else>
                    <view class='fa fa-star-o'></view>
