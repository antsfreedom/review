.store__top {
    background-color: #f5f3ef;
    margin-top:90px;
}
.store__cover {
    float:left;
    width: 160rpx;
    height: 160rpx;
    margin:22px 10px;
}
.store__info {
    /* display: inline-block; */
    color: #657180;
    font-size: 28rpx;
    padding-top: 30px;
}

.clearfix:after{
  display: block;
  content:"";
  clear:both;
}

.store__info_abstract{
  font-size:12px;
}
.store__info_city{
  font-size:12px;
}

.tab_top{
  position: fixed; 
  top:0;
  left:0;
  width:100%;
  z-index:2
}

.navbar{   
   display: flex;   
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
   flex: auto;    
  text-align: center;  
  line-height: 80rpx; 
  color:#aaa; 
  /* margin:0 30px */
}  
.navbar .item.active{  
  color: #333;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  /* background: #333;   */
}

.goods-item {
    display: inline-block;
    width: calc(50% - 18rpx);
    overflow: hidden;
    background-color: #fff;
}
.goods-item:nth-child(1),.goods-item:nth-child(2) {
    margin-top: 12rpx;
}
.goods-item:nth-child(even) {
    margin-left: 6rpx;
    margin-right: 12rpx;
}
.goods-item:nth-child(odd) {
    margin-right: 6rpx;
    margin-left:12rpx;
}
.goods-item__cover {
    width: 100%;
    height: 300rpx;
}
.goods-item__info {
    padding: 12rpx;
}
.goods-item__title {
    font-size: 24rpx;
    height: 38px;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #999;
}

.panel_right {
    width: calc(100% - 115px);
    background-color: #fff;
}
.child {
    padding: 14rpx 30rpx 12rpx;
    border-bottom:1px dashed #eee;
}
.child:not(:last-child) {
    border-bottom: 1rpx solid #fff;
}
.child__title {
    font-size: 28rpx;
    color: #333;
}
.child .fa {
    font-size: 12px;
}
.grandchild {
    background-color: #fff;
    padding: 20rpx 10rpx 30rpx 30rpx;
     display: flex;
    flex-wrap: wrap; 
    border-bottom:1px dashed #eee;
}
.grandchild-item {
    box-sizing: border-box;
    font-size: 26rpx;
    margin-bottom: 30px;
    height: 25px;
    margin-right:13px;
    margin-bottom:50px;
}

.temp2{
    position:fixed;
    top:105px;
    z-index:5
}
.slidedown{
    transform:  translateY(0%);
}
.temp view{
    border-bottom: 1px solid #d1d3d4;
    font-size: 14px;
    color: #666;
}

@keyframes slidown {
    from {
        transform: translateY(-100%);
    }
    to {
        transform: translateY(0%);
    }
}

.slidown {
    display: block;
    animation: slidown .2s ease-in both;
}

@keyframes slidup {
    from {
        transform: translateY(0%);
    }
    to {
        transform: translateY(-100%);
    }
}

.slidup {
    display: block;
    animation: slidup .2s ease-in both;
}

.disappear {
    display: none;
}


.hidebox{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index:3
}

.hideleft{
  width:40%;
  height:100%;
  background:rgba(0,0,0,0.3);
  float:left;
}

.hidelist{
  width:100%;
  height:100%;
  background:#FFF;
}

.subtitle{
  margin-top:5px;
  text-align: center;
}