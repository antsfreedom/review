.top-box{
  position: fixed;
  left:0;
  top:0;
  width:100%;
  z-index:3
}
.clearfix:after {
    display: block;
    content: "";
    clear: both;
}

.searchbar-input {
    position: fixed;
    width: 100%;
    height: 34px;
    padding: 0 8px;
    box-sizing: border-box;
}

input {
    margin-top: 5px;
    border-radius: 5px;
    border: 1px solid #ccc;
    padding: 0 12px;
    font-size: 14px;
    background: #fff;
    outline: none;
    border: none;
}

.search-icon {
    position: absolute;
    top: 8px;
    left: 15px;
}


.goods-item {
    display: inline-block;
    width: calc(50% - 18rpx);
    overflow: hidden;
    background-color: #fff;
}

.price_lg{
  font-size:14px;
}
.goods-item:nth-child(1),.goods-item:nth-child(2) {
    margin-top: 12rpx;
}
.goods-item:nth-child(even) {
    margin-left: 6rpx;
    margin-right: 12rpx;
}
.goods-item:nth-child(odd) {
    margin-right: 6rpx;
    margin-left:12rpx;
}
.goods-item__cover {
    width: 100%;
    height: 300rpx;
}
.goods-item__info {
    padding: 12rpx;
}
.goods-item__title {
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #999;
}


.page {
    position: relative;
    height: 100%;
    overflow: hidden;
}

.nav{
    position: relative;
    z-index: 99;
    display: flex;
    border-top: 1px solid #d1d3d4;
    border-bottom: 1px solid #d1d3d4;
    background: #fff;
}
.nav-son{
    display: flex;
    flex: 1;
    text-align: center;
    height: 40px;
    align-items:center;
    justify-content:center;
    font-size: 14px;
}
.borders{
    border-left: 1px solid #e6e6e6;
    border-right: 1px solid #e6e6e6;
}
.content{
    display: inline-block;
}
.icon{
    display: inline-block;
    border: 6px solid transparent;
    border-top: 6px solid #9b9b9b;
     margin-left: 5px; 

}

.down{
  display: inline-block;
  border: 6px solid transparent;
  border-top: 6px solid #9b9b9b;
  margin-left:-12px;
  margin-top: 15px;
}
.up{
  border: 6px solid transparent;
  margin-left: 5px;
  border-bottom: 6px solid #9b9b9b;
  border-top:0;
  margin-top:-10px;
}

.temp{
    position: z-index;
    z-index: 4;
}
.temp2{
    display: none;
    width: 100%;
    max-height:750rpx;
    overflow-y: scroll;
    padding: 0 0 0 20rpx;
    line-height:100rpx;
    background: #fff;
}
.slidedown{
    transform:  translateY(0%);
}
.temp view{
    border-bottom: 1px solid #d1d3d4;
    font-size: 14px;
    color: #666;
}
.area{
    position: fixed;
    width: 100%;
    display: none;
    height: 450rpx;
    z-index: 5;
}
.area .area_item{
    overflow-y: scroll;
    float: left;
    width: 33.33%;
    height: 450rpx;
    line-height: 80rpx;
    box-sizing: border-box; 
    font-size: 14px;
    color: #717273;
}
.area_item view{
    text-overflow: ellipsis;
    overflow: hidden; 
    white-space:nowrap;  
    padding-left: 15rpx; 
}
.area-left{
    background: #c5c5c5;
}
.area-center{
    background: #e0e0e0;
}
.area-right{
    background: #fff;
}
.area-right view{
    border-bottom: 1px solid #c5c5c5;
}
.current{
    background: #e0e0e0;
}
.current2{
    background: #fff;
}
.fullbg{
    position: fixed;
    top:0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgb(1, 1, 1);
    transition: all 1s;
    opacity: 0;
}
.fullopacity{
    opacity: .5;
}
.nav-son.active .content{
    color: #61beff;
}
.nav-son.active .icon{
    border-bottom: 4px solid #61beff;
    border-top:0;
}
@keyframes slidown{
    from{
        transform:  translateY(-100%);
    }
    to{
        transform:  translateY(0%);
    }
}
.slidown{
    display: block;
    animation: slidown .5s ease-in both;
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}
.slidup{
    display: block;
    animation: slidup .5s ease-in both;
}
.disappear{
    display: none;
}

.sortpic image{
  width:12px;
  height:12px;
  margin-left:5px;
}