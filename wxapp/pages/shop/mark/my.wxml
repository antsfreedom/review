<view class="page">
    <view class="page__bd">
        <view class="weui-panel weui-panel_access" wx:if='{{list.length > 0}}'>
            <view class="weui-panel__bd">
                <view wx:for='{{list}}' class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                   <!--  <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb " mode='aspecFit' src="{{item.cover_url}}" />
                    </view> -->
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <navigator url='/pages/shop/index/detail?id={{item.data_id}}' class="weui-media-box__title">{{item.title}}</navigator>
                        <view class="weui-media-box__desc">
                            <view bindtap='goodsMark' id='{{item.data_id}}'>取消收藏</view>
                        </view>
                    </view>
                </view>

            </view>
        </view>
        <navigator url='/pages/shop/index/lists' class='center no-data' wx:if='{{list.length < 1}}'>
            <view class='fa fa-star'></view>
            <text>您还没有收藏商品，快去逛逛吧～</text>
        </navigator>
    </view>
</view>