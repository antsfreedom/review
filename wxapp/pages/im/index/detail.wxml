<view class="page">
    <view class="weui-panel weui-panel_access"  style='height: {{height}}px;background-color: #ececec'>
        <scroll-view class="weui-panel__bd msg-box msg-list" bindscrolltoupper='loadMore' style='height: {{height}}px;' scroll-y="true" >
            <block wx:for='{{talk_list}}'>
                <block wx:if='{{item.type == "received"}}'>
                    <view class='msg-item msg-item_left flex_start'>
                        <image class="msg-item__avatar" src='{{to_user_info.avatar_url}}'></image>
                        <view class='msg-item__content'>
                            <image src='../../../images/chat_left.png' class='msg-item__angle msg-item__angle_left'></image>
                            <view class='msg-item__text msg-item__text_left'>
                                <view>{{item.message}}</view>
                                <view class="msg-item__time">{{item.create_time_format}}</view>
                            </view>
                        </view>
                    </view>
                </block>
                <block  wx:elif="{{item.type == 'sent'}}">
                    <view class='msg-item msg-item_right flex_end'>
                        <view class='msg-item__content'>
                            <view class='msg-item__text msg-item__text_right'>
                                <view>{{item.message}}</view>
                                <view class="msg-item__time">{{item.create_time_format}}</view>
                            </view>
                            <image src='../../../images/chat_right.png' class='msg-item__angle msg-item__angle_right'></image>
                        </view>
                        <image class="msg-item__avatar" src='{{user_info.avatar_url}}'></image>
                    </view>
                </block>
            </block>
        </scroll-view>
    </view>

    <view class='send__box space_between'>
        <input class="send__input" placeholder="" value="{{message}}" name='message' bindinput='setValue'/>
        <button class="weui-btn send__btn" type="primary" size='mini' bindtap='sendMsg'>Send</button>
    </view>
</view>
