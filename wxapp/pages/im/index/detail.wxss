
.msg-item {
    padding: 10rpx 0;
}
.msg-item__avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 1rpx solid #e1e1e1;
    margin: 0 20rpx;
}
.msg-item__content {
    position: relative;
}
.msg-item__angle {
    position: absolute;
    width: 16rpx;
    height: 14rpx;
    top: 50%;
    transform: translateY(-100%);
}
.msg-item__angle_left {
    left: -15rpx;
}
.msg-item__angle_right {
    right: -14rpx;
}
.msg-item__text {
    background-color: #fff;
    padding: 10rpx 16rpx;
    border-radius: 12rpx;
    display: inline-block;
    max-width: 150px;
    white-space: normal;
    word-break:break-all;
}
.msg-item__time {
    font-size: 10px;
    color: #aaa;
}
.send__box {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 80rpx;
    padding: 10rpx 30rpx;
    background-color: #f9f9f9;
}
.send__input {
    display: inline-block;
    border-radius: 6rpx;
    border: 1rpx solid #e1e1e1;
    width: calc(100% - 150rpx);
    background-color: #fff;
    margin-right: 10rpx;
}
.send__btn {
    background-color: #3399ff!important;
    margin: 0rpx;
}
