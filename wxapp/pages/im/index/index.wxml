<view class="page">
    <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <scroll-view class="weui-panel__bd">
                <navigator url='/pages/im/index/detail?id={{item.id}}' wx:for="{{list}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" mode='aspectFit' src="{{item.user_info.avatar_url}}"></image>
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">{{item.user_info.nickname}}</view>
                        <view class="weui-media-box__desc">{{item.message}}</view>
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
            </scroll-view>
        </view>
    </view>
</view>
