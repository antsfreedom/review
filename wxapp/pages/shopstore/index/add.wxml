
<view class="page">
	<view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">标题</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='setValue' placeholder="请输入店铺标题" name='title' id='title' value='{{form_data.title}}'/>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" bindinput='setValue' placeholder="请输入店铺简介" id='abstract' name="abstract" value='{{form_data.abstract}}' style="height: 3.3em" />
                    <!-- <view class="weui-textarea-counter">0/200</view> -->
                </view>
            </view>
            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">店铺logo</view>
                </view>
                <view class="weui-cell__bd">
                    <image src='{{form_data.cover}}' class='cover' mode='aspecFit'></image>
                </view>
                <view class="weui-cell__ft">
                    <button type="primary" size='mini' bindtap='chooseImage' style='margin-right: 30rpx;'>上传logo</button>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">城市</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="city" id='city' value="{{form_data.city}}" placeholder="请选择城市"  bindfocus='toggleArea'/>
                </view>
            </view>
        </view>

        <view class='list-group'>
            <button class="weui-btn form-btn" type="primary" bindtap='formSubmit' style='margin: 0 30rpx;'>确定</button>
        </view>
        <view class='area-picker__bg' wx:if='{{areaShow}}'>
        <view class='area-picker__container'>
            <view class='area-picker__header space_between' bindtap='toggleArea'>
                <view>取消</view>
                <view>确定</view>
            </view>
            <picker-view class="picker-view" indicator-class='area-picker-column' style="width: 100%; height: 224px;" value="{{areaIndex}}" bindchange="bindAreaChange">
                <picker-view-column>
                    <view wx:for="{{province}}" class="area-picker__item">{{item.name}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view wx:for="{{city}}" class="area-picker__item">{{item.name}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view wx:for="{{area}}" class="area-picker__item">{{item.name}}</view>
                </picker-view-column>
            </picker-view>
        </view>
    </view>
	</view>
</view>
