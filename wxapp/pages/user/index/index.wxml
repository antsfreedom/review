<view class="page">
    <view class="weui-panel weui-panel_access">
        <view class="weui-panel__bd">
            <block wx:if='{{userInfo}}'>
                <navigator url="/pages/user/center/profile" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{userInfo.avatar_url}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">{{userInfo.nickname}}</view>
                        <view class="weui-media-box__desc">用户名：{{userInfo.username}}</view>
                    </view>
                </navigator>
            </block>
            <block wx:if='{{!userInfo}}'>
                <navigator url="/pages/user/user/login" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__hd">
                        <image class="" src="" style='width: 60px;height: 60px;' />
                    </view>
                    <view class="weui-cell__bd">
                        <view class="weui-media-box__title">未登录</view>
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
            </block>
        </view>
    </view>
    <view class="page__bd">
      <view class="weui-cells weui-cells_after-title list-group">
          <navigator url="/pages/shop/order/my" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                  <image class='fa fa-store' style="margin-right: 5px;vertical-align: top;width:20px; height: 20px;"></image>
              </view>
              <view class="weui-cell__bd">我的订单</view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>
        </view>  
    </view>
</view>
