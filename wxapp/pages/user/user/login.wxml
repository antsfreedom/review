<view class="page">
    <view class="page__hd"></view>
    <view class="page__bd">
        <view class='center'>
            <image src='/images/logo.png' class='logo'></image>
        </view>
        <view class='center'>
            <form class="form" bindsubmit="formSubmit" bindreset="formReset">
                <view class="weui-cells form-items">
                    <view class="weui-cell weui-cell_input item-input">
                        <view class="weui-cell__hd">
                            <view class="weui-label input-item_label">
                                <view class='fa fa-user'></view>
                            </view>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" name="account" placeholder="用户名、邮箱、手机号" value="admin" />
                        </view>
                    </view>
                    <view class="weui-cell weui-cell_input">
                        <view class="weui-cell__hd">
                            <view class="weui-label input-item_label">
                                <view class='fa fa-key'></view>
                            </view>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" password='true' name="password" placeholder="请输入密码" value="admin" />
                        </view>
                    </view>
                </view>
                <view style='margin:70rpx auto 0rpx;'>
                    <button formType="submit" class="weui-btn form-btn" type="primary">立即登录</button>
                </view>
                <view class='center' style='margin-top: 30rpx;'>
                    <navigator url='/pages/user/user/register' class='form-link'>立即注册</navigator>
                    <navigator url='/pages/user/user/reset_password' class='form-link'>忘记密码</navigator>
                </view>
            </form>
        </view>
    </view>
</view>