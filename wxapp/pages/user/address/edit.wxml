<view class="page">
    <view class="page__bd">
      <form bindsubmit="formSubmit">
      <view class="weui-cells weui-cells_after-title">
        <input type='hidden' name="id"  value="{{formData.id}}" style='display:none' />
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="title" id='title' value="{{formData.title}}" placeholder="请输入姓名" bindchange='setValue' />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">称呼</view>
                </view>
                <view class="weui-cell__bd">
                    <picker value="{{city}}" range='{{gender}}' value='{{genderIndex}}' range-key='name' mode='selector' bindchange="bindGenderChange">
                        <view class="weui-input">{{gender[genderIndex].name}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="number" name="mobile" id='mobile' value="{{formData.mobile}}" placeholder="请输入手机号" bindchange='setValue'/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">城市</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="city" id='city' value="{{formData.city}}" placeholder="请选择城市" bindfocus='toggleArea'/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">详细地址</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="address" id='address' value="{{formData.address}}" placeholder="请输入详细地址" bindchange='setValue' />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">邮编</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="post_code" id='post_code' value="{{formData.post_code}}" placeholder="请输入邮政编码" bindchange='setValue' />
                </view>
            </view>
            <view class="weui-cell weui-cell_switch">
                <view class="weui-cell__bd">默认地址</view>
                <view class="weui-cell__ft">
                    <switch bindchange='switchChange' />
                </view>
            </view>
        </view>
        <view class='list-group'>
            <button class="weui-btn form-btn" type="primary" formType='submit'>修改地址</button>
        </view>
      </form>
    </view>

    <view class='area-picker__bg' wx:if='{{areaShow}}'>
        <view class='area-picker__container'>
            <view class='area-picker__header space_between' bindtap='toggleArea'>
                <view>取消</view>
                <view>确定</view>
            </view>
            <picker-view class="picker-view" indicator-class='area-picker-column' style="width: 100%; height: 224px;" value="{{areaIndex}}" bindchange="bindAreaChange">
                <picker-view-column>
                    <view wx:for="{{province}}" class="area-picker__item">{{item.name}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view wx:for="{{city}}" class="area-picker__item">{{item.name}}</view>
                </picker-view-column>
                <picker-view-column>
                    <view wx:for="{{area}}" class="area-picker__item">{{item.name}}</view>
                </picker-view-column>
            </picker-view>
        </view>
    </view>
</view>