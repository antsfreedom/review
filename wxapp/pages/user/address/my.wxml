<view class="page">
    <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd" style='border-bottom: 1rpx solid #e5e5e5;'>
                <block wx:if='{{addressList.length > 0}}'>
                    <navigator url='/pages/user/address/edit?id={{item.id}}' class="weui-media-box weui-media-box_text" id='{{item.id}}' bindtap='linkToDetail' wx:for='{{addressList}}'>
                        <view class="weui-media-box__title weui-media-box__title_in-text">{{item.title}}</view>
                        <view class="weui-media-box__desc">{{item.city}}{{item.address}}</view>
                    </navigator>
                </block>
            </view>
            <view class="weui-panel__ft">
                <view class="weui-media-box weui-media-box_small-appmsg">
                    <view class="weui-cells weui-cells_in-small-appmsg">
                        <navigator url="/pages/user/address/add" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                            <view class="weui-cell__hd"><view class='fa fa-plus-circle' style='margin-right: 10rpx;color: #3399ff'></view></view>
                            <view class="weui-cell__bd weui-cell_primary">
                                <view>新增地址</view>
                            </view>
                            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                        </navigator>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>