@import 'utils/weui.wxss';
@import 'utils/lyicon.wxss';

/**app.wxss**/
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.center {
	display: flex;
	justify-content: center;
	align-items: center;
}
.space_between {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.flex_start {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.flex_end {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}
.btn-pill {
    border-radius: 46rpx;
}
.btn-pill::before,.btn-pill::after {
    display: none!important;
}
.btn-default {
    background-color: #fff!important;
    color: #3399ff!important;
}
.btn-block {
    width: 100%;
    border-radius: 0;
}
.btn-block::after{
    border-radius: 0;
    border-left: none;
    border-right: none;
}
.btn-orange.btn-fill {
    background-color: orange;
    color: #fff;
    border-color: orange;
}
.send-verify {
    background: orange!important;
    position:absolute;
    right: 20rpx;
    top: 50%;
    transform:translateY(-50%);
    -webkit-transform: translateY(-50%);
    margin-top: 0;
}
.list-group {
    margin-top: 60rpx;
}
.btn-default[disabled], {
    color: #3399ff!important;
}
.weui-btn[disabled]{
    opacity: 0.5!important;
}
.color-theme {
    color:#f85a61;
}
.price_lg {
    font-size: 32rpx;
}
/*标签页*/
.tab-links {
    display: flex;
    background-color: #fff;
    height: 80rpx;
}
.tab-link {
    flex-grow: 1;
    color: #555;
    height: 100%;
}
.tab-link .center {
    height: 100%;
}
.tab-link text {
    line-height: 80rpx;
    height: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
}
.tab-link.active text{
    color: #f85a61;
    border-bottom: 4rpx solid #f85a61;
}
/*列表无数据状态*/
.no-data {
    height: 400px;
    flex-direction: column;
}
.no-data .fa {
    font-size: 50px;
    color: #f85a61;
}